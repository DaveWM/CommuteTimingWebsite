@model CommuteTimingWebsite.Models.LocalPasswordModel

<div class="page-header">
    <h3>Change password</h3>
</div>

@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="form-group">
                @Html.LabelFor(m => m.OldPassword)
                @Html.PasswordFor(m => m.OldPassword,new Dictionary<string, object> {{"class", "form-control"}})
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword,new Dictionary<string, object> {{"class", "form-control"}})
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword,new Dictionary<string, object> {{"class", "form-control"}})
            </div>
        <input type="submit" value="Change Password" class="btn btn-primary"/>
}
